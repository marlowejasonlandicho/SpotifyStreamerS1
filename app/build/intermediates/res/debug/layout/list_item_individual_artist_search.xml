<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".SpotifyStreamerMainActivity">

    <ImageView
        android:id="@+id/image_view_artist"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/hint_no_image"
        android:src="@mipmap/ic_launcher" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/text_view_artist_name"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/image_view_artist"
        android:gravity="center|start"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:text="@string/artist_search_hint"
        android:textColor="#a5000000" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/image_view_artist"
        android:layout_marginBottom="10dp"
        android:minHeight="?android:attr/listPreferredItemHeight" />


</RelativeLayout><!-- From: file:/Users/marlowe.landicho/AndroidStudioProjects/SpotifyStreamer/app/src/main/res/layout/list_item_individual_artist_search.xml -->